@model CustomerPortal.UserViewModel

@Html.ValidationSummary(true)

@(Html.Kendo().Form<CustomerPortal.UserViewModel>()
    .Name("formExample")
    .HtmlAttributes(new { action = "", method = "POST" })
    .Validatable(v =>
     {
       v.ValidationSummary(vs => vs.Enable(true));
     })
    .Items(items =>
    {
        items.AddGroup()
            .Label("Registration Form")
            .Items(i =>
            {
                i.Add()
                    .Field(f => f.FirstName)
                    .Label(l => l.Text("First Name:"));
                i.Add()
                    .Field(f => f.LastName)
                    .Label(l => l.Text("Last Name:"));
            });
    })
)